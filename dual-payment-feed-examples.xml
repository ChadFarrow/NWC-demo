  <channel>
    <title>Dual Payment Method Podcast</title>
    <description>Example feed showing dual payment methods for value4value</description>
    <link>https://example.com</link>
    
    <!-- APPROACH 1: Multiple Recipients with Same Name/Split (Recommended) -->
    <podcast:value type="lightning" method="keysend">
      
      <!-- Host Alice - Prefers keysend, provides Lightning address for compatibility -->
      <podcast:valueRecipient 
        name="Alice Host" 
        type="node" 
        address="02eec7245d6b7d2ccb30380bfbe2a3648cd7a942653f5aa340edcea1f283686619" 
        split="45" />
      <podcast:valueRecipient 
        name="Alice Host" 
        type="lnaddress" 
        address="alice@getalby.com" 
        split="45" />
      
      <!-- Host Bob - Prefers keysend, provides Lightning address for compatibility -->
      <podcast:valueRecipient 
        name="Bob Host" 
        type="node" 
        address="03a0434d9e47f3c86235477c7b1ae6ae5d3442d49b1943c2b752a68e2a47e247c7" 
        split="45" />
      <podcast:valueRecipient 
        name="Bob Host" 
        type="lnaddress" 
        address="bob@getalby.com" 
        split="45" />
      
      <!-- Producer - Only has Lightning address -->
      <podcast:valueRecipient 
        name="Producer Carol" 
        type="lnaddress" 
        address="carol@walletofsatoshi.com" 
        split="5" />
      
      <!-- Podcast Index - Keysend only (no fallback needed) -->
      <podcast:valueRecipient 
        name="Podcast Index" 
        type="node" 
        address="02d5c1bf8b940dc9cadca86d1b0a3c37fbe39cee4c7e839e33bef9174531d27f52" 
        split="5" />
    </podcast:value>
    
    <item>
      <title>Episode 1: Getting Started with Dual Payments</title>
      <description>Learn how podcasters can provide both keysend and Lightning address options</description>
      
