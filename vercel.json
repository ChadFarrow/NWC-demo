{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/metaboost",
      "destination": "/api/metaboost.js"
    },
    {
      "source": "/metaboost-dashboard.html",
      "destination": "/api/metaboost-dashboard.js"
    },
    {
      "source": "/",
      "destination": "/public/v4v_lightning_tester.html"
    },
    {
      "source": "/index.html",
      "destination": "/public/v4v_lightning_tester.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*\\.js)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "/(.*\\.xml)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    },
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html"
        }
      ]
    }
  ]
}