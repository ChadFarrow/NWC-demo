{
  "version": 2,
  "builds": [
    {
      "src": "thesplitbox/server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "thesplitbox/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "thesplitbox/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "thesplitbox/client/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}